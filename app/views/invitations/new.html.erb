<div class="grid1">
<h1>Invite Students</h1>
<%= form_tag classroom_invitations_path(@classroom) do |f| %>
  <h3>
    <%= label_tag :invitation_emails %>
    </h3>
  <span>
    <%= text_area_tag :invitation_emails, '', placeholder: "Separate multiple email addresses with commas or line breaks.", class: "form-input-area", rows: 4 %>
  </span>
  <div>
    <%= submit_tag 'Send Invitation', class: 'invite-button btn' %>
  </div>
<% end %>
</div>

<div class="grid1">
  <table>
    <tr>
      <th>Email</th>
      <th>Status</th>
    </tr>

    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.email %></td>
        <td><%= get_invitation_status(invitation) %></td>
      </tr>
    <% end %>
  </table>
</div>