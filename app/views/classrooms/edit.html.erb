  <div class="grid-unit whole">
    <h2>Edit Classroom</h2>
    <h6 class="subtitle"><%= @classroom.name %></h6>
  </div>
</div>
<div class="wrapper">
  <div class="grid-unit narrow sidebar pull-right">
    <h5>Additional Teachers</h5>
    <p>To invite additional teachers to this classroom, please share this token:</p>
    <p><span class='token'><%= @classroom.teacher_token %></span></p>
  </div>
  <div class="grid-unit wide">
    <%= form_for @classroom do |f| %>
      <%= f.error_messages %>
      <div class="form-group">
        <%= f.label :name, 'New Classroom Name' %>
        <%= f.text_field :name, placeholder: "Enter classroom name", class: "form-input" %>
      </div>
      <div class="form-group">
        <%= f.label :name, 'Classroom description' %>
        <%= f.text_area :description, maxlength: "65", placeholder: "Enter classroom description (optional; max 65 chars)", class: "form-input" %>
      </div>
      <div>
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to 'Leave Classroom', @classroom, method: :delete, data: {confirm: "Are you sure you want to leave this classroom?"}, class: "danger-link", id: 'delete-classroom' %>
      </div>
    <% end %>
  </div>
</div>
