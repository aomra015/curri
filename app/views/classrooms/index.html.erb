<div id="page-head">
  <h2 class="page-title">Your Classrooms</h2>
</div>
<div class="grids">
  <%= render @classrooms %>

  <!-- Teacher Controls -->
  <% if current_user.teacher? %>
    <%= link_to new_classroom_path, class: "grid1 grid-add", id: "add-classroom" do %>
      <div class="add-unit">
        <div class="add-sign">+</div>
        <p class="add-text">Add New Classroom</p>
      </div>
    <% end %>
  <% end %>
</div>
