<% provide(:title, 'Classrooms') %>
<div class="grid">
  <div class="grid-unit whole">
    <h2 class="page-title">Your Classrooms</h2>
  </div>
  <!-- Teacher Controls -->
  <% if current_user.teacher? %>
    <div class="grid-unit narrow add-unit">
      <div class="classroom">
        <%= link_to new_classroom_path, class: "classroom-content", id: "add-classroom" do %>
          <div class="add-sign">+</div>
          <p class="add-text">Add New Classroom</p>
        <% end %>
      </div>
    </div>
  <% end %>
  <!-- Classrooms List -->
  <%= render @classrooms %>
</div>
