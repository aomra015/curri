<h6 class="subtitle classroom-option">Create New Classroom</h6>
<%= form_for classroom, remote: true do |f| %>
  <%= f.error_messages %>
  <div class="form-group form-input-required">
    <%= f.label :name, 'Classroom Name' %>
    <%= f.text_field :name, maxlength: "90", placeholder: "Enter classroom name", class: "form-input" %>
  </div>
  <div class="form-group">
    <%= f.label :description, 'Classroom description' %>
    <%= f.text_area :description, maxlength: "90", placeholder: "Enter classroom description (optional; max 90 chars)", class: "form-input" %>
  </div>
  <div>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>