  <div class="grid-unit whole">
    <h2>Edit Profile</h2>
    <h6 class="subtitle"><%= @current_user.first_name %> <%= @current_user.last_name %></h6>
  </div>
  <div class="grid-unit narrow pull-right">
    <div class="gravatar">
      <p><%= image_tag "#{@current_user.gravatar}?s=300" %>Change your avatar at <br><%= link_to 'Gravatar.com', 'http://www.gravatar.com', target: '_blank', class:"strong" %></p>
    </div>
  </div>
  <div class="grid-unit wide">
    <%= form_for @current_user, url: update_profile_path , class: 'form-horizontal' do |f| %>
      <div class="form-group form-input-required">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-input" %>
      </div>

      <div class="form-group form-input-required">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-input" %>
      </div>

      <div class="form-group form-input-required">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :new_password %>
        <%= f.password_field :password, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-input" %>
      </div>

      <div>
      <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<% provide(:title, 'Edit Profile') %>