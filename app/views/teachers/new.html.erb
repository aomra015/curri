<div class="grid-unit-header">
  <h3>Register as a Teacher</h3>
</div>
<%= form_for @user, url: teachers_create_path do |f| %>
<%= f.error_messages %>
  <div class="form-group">
    <label for="email"><%= label_tag :email %></label>
    <%= f.email_field :email, class: "form-input" %>
  </div>
  <div class="form-group">
    <label for="first_name"><%= label_tag "user[first_name]", 'First Name' %></label>
    <%= text_field_tag "user[first_name]", nil, class: "form-input" %>
  </div>
  <div class="form-group">
    <label for="last_name"><%= label_tag "user[last_name]", 'Last Name' %></label>
    <%= text_field_tag "user[last_name]", nil, class: "form-input" %>
  </div>
  <div class="form-group">
    <label for="password"><%= label_tag :password %></label>
    <%= f.password_field :password, class: "form-input" %>
  </div>
  <div class="form-group">
    <label for="password confirmation"><%= label_tag :confirm_Password %></label>
    <%= f.password_field :password_confirmation, class: "form-input" %>
  </div>
  <%= submit_tag "Register", class: "btn btn-primary"%>
<% end %>
<div class="grid-unit-footer">
  <p class="register"><%= link_to 'Already have an account? Login here', login_path %></p>
  <a href='' class="register-show">
    <span>Student?</span>
    <span class="register-hidden">Check your inbox for an invitation email, or ask your teacher.</span>
  </a>
</div>
