<h1>Sign up as a Teacher</h1>

<%= form_for @user, url: teachers_create_path do |f| %>
  <h3>
    <%= f.label :username %>
  </h3>
  <span>
    <%= f.text_field :username, placeholder: 'Please enter a username', class: "form-input" %>
  </span>

  <h3>
    <%= f.label :email %>
  </h3>
  <span>
    <%= f.email_field :email, placeholder: 'Please enter email address', class: "form-input" %>
  </span>

  <h3>
    <%= f.label :password %>
  </h3>
  <span>
    <%= f.password_field :password, class: "form-input" %>
  </span>

  <h3>
    <%= f.label :password_confirmation %>
  </h3>
  <span>
    <%= f.password_field :password_confirmation, class: "form-input" %>
  </span>

  <div>
    <%= f.submit 'Register', class: 'register-teacher btn' %>
  </div>
<% end %>
