<div class="grid page-title">
  <div class="grid-unit whole">
    <h2><%= @classroom.name %> > All Tracks</h2>
  </div>

  <!-- Teacher Controls -->
  <% if current_user.teacher? %>
    <%= link_to 'Manage Students', new_classroom_invitation_path(@classroom), class: "btn btn-head pull-right", id: 'manage-students' %>
    <%= link_to 'Manage Classroom', edit_classroom_path(@classroom), class: "btn btn-head pull-right", id: 'manage-classroom' %>
  <% end %>

</div>

<div class="grids">
  <%= render @tracks %>

  <!-- Teacher Controls -->
  <% if current_user.teacher? %>
    <%= link_to new_classroom_track_path, class: "grid1 grid-add", id: "add-track" do %>
      <div class="add-unit">
        <div class="add-sign">+</div>
        <p class="add-text">Add New Track</p>
      </div>
    <% end %>
  <% end %>

</div>