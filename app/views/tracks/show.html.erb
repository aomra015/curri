  <div class="grid-unit wide">
    <h2><%= @track.name %>
      <% if current_user.teacher? && !@track.published %>
        <span class="unpublished-badge">
          <%= 'Unpublished' unless @track.published %>
        </span>
      <% end %>
    </h2>
    <h6 class="subtitle"><%= @classroom.name %></h6>
  </div>
    <!-- Teacher Controls -->
    <% if current_user.teacher? %>
      <div class="grid-unit narrow">
        <%= link_to 'Add Checkpoints', new_classroom_track_checkpoint_path(@classroom, @track) %>
        <%= link_to 'Manage Track', edit_classroom_track_path(@classroom, @track), id: 'manage-track' %>
      </div>
    <% end %>
</div>
<div class="wrapper">
  <div class="grid-unit whole">
    <div class="track-times">
      <div><%= display_start_time(@track) %></div>
      <div><%= display_end_time(@track) %></div>
    </div>
  </div>
  <div class="grid-unit narrow pull-right">
    <h3 class="grid-header">All Tracks</h3>
    <div class="row">
      <ul>
        <% @tracks.each do |track| %>
          <li class="link"><%= link_to track.name, classroom_track_path(@classroom, track) %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="grid-unit wide" id="track" data-trackid="<%= @track.id %>">
    <div class="content">
      <h4 class="unit-header">All Checkpoints</h4>
      <%= render @track.checkpoints %>
    </div>
  </div>
</div>
<% provide(:title, @track.name) %>

<% if @current_user.student? %>
  <%= track_event("Student views track page", {classroom_id: @classroom.id, track_id: @track.id }) %>
<% end %>
