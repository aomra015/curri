<div class="row">
  <div class="row-inner">
    <div class="col-md-5 checkpoint-content">
      <h4>
      <%= content_tag :p, '?', class: 'btn btn-sm btn-success success_criteria', data: { title: "Success Criteria", content: checkpoint.success_criteria } %>
      <%= checkpoint.expectation %>
      </h4>
    </div>
  
    <div class="col-md-5 checkpoint-score-select">
      <%= link_to "I understand", classroom_track_ratings_path(@classroom, @track, checkpoint: checkpoint, value: 0) %>
      <%= link_to "I'm OK", classroom_track_ratings_path(@classroom, @track, checkpoint: checkpoint, value: 1) %>
      <%= link_to "I need help!", classroom_track_ratings_path(@classroom, @track, checkpoint: checkpoint, value: 2) %>
    </div>
  
    <div class="col-md-2 <%= checkpoint_class_name(checkpoint) %>">
  
    </div>
  </div>
</div>