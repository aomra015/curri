<div class="row" id="checkpoint<%= checkpoint.id %>">
  <div class="row-inner">
    <div class="col-md-5 checkpoint-content">
      <h4>
      <%= content_tag :p, '?', class: 'btn btn-sm btn-success success_criteria', data: { title: "Success Criteria", content: checkpoint.success_criteria } %>
      <%= checkpoint.expectation %>
      </h4>
    </div>
  
    <div class="col-md-5 checkpoint-score-select">
      <%= link_to Rating::OPTIONS[0], classroom_track_ratings_path(@classroom, @track, checkpoint_id: checkpoint, value: 0), method: :post, remote: true, class: 'checkpoint-rating' %>
      <%= link_to Rating::OPTIONS[1], classroom_track_ratings_path(@classroom, @track, checkpoint_id: checkpoint, value: 1), method: :post, remote: true, class: 'checkpoint-rating' %>
      <%= link_to Rating::OPTIONS[2], classroom_track_ratings_path(@classroom, @track, checkpoint_id: checkpoint, value: 2), method: :post, remote: true, class: 'checkpoint-rating' %>
    </div>
  
    <div class="marker col-md-2 <%= checkpoint_class_name(checkpoint) %>">
  
    </div>
  </div>
</div>