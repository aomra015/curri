<div class="row" id="checkpoint<%= checkpoint.id %>">
  <div class="unit-inner">
    <div class="checkpoint-content">
      <h4>
      <%= checkpoint.expectation %>
      </h4>
      <%= content_tag :div, '?', class: 'btn btn-small success-criteria', data: { title: "Success Criteria", content: checkpoint.success_criteria } %>
    </div>

    <div class="checkpoint-score-links">
      <%= link_to Rating::OPTIONS[0], classroom_track_ratings_path(@classroom, @track, checkpoint_id: checkpoint, value: 0), method: :post, remote: true, class: 'checkpoint-rating checkpoint0 btn' %>
      <%= link_to Rating::OPTIONS[1], classroom_track_ratings_path(@classroom, @track, checkpoint_id: checkpoint, value: 1), method: :post, remote: true, class: 'checkpoint-rating checkpoint1 btn' %>
      <%= link_to Rating::OPTIONS[2], classroom_track_ratings_path(@classroom, @track, checkpoint_id: checkpoint, value: 2), method: :post, remote: true, class: 'checkpoint-rating checkpoint2 btn' %>
    </div>

    <div class="marker <%= checkpoint_class_name(checkpoint) %>">

    </div>
  </div>
</div>