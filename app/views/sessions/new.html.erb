<div class="grid">
  <div class="grid-unit narrow login-box">
    <div class="grid-unit-header">
    <!-- replace h3 with curri logo -->
      <h3>Log in</h3>
    </div>
    <%= form_tag login_path do %>
      <div class="form-group">
        <label for="email"><%= label_tag :email %></label>
        <%= email_field_tag :email, nil, class: "form-input" %>
      </div>
      <div class="form-group">
        <label for="password"><%= label_tag :password %></label>
        <%= password_field_tag :password, nil, class: "form-input" %>
        <p><%= link_to "Forgot password?", new_password_reset_path, id: 'password-reset' %></p>
      </div>
      <%= submit_tag "Login", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
