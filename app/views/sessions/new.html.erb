<div class="grid">
  <div class="grid-unit narrow login-box">
    <!-- add curri logo -->
    <%= form_tag login_path do %>
      <div class="form-group">
        <label for="email"><%= label_tag :email %></label>
        <%= email_field_tag :email, nil, class: "form-input", :tabindex => '1' %>
      </div>
      <div class="form-group">
        <label for="password"><%= label_tag :password %><p class="pull-right forgot"><%= link_to "Forgot?", new_password_reset_path, id: 'password-reset' %></p></label>
        <%= password_field_tag :password, nil, class: "form-input", :tabindex => '2' %>
        
      </div>
      <%= submit_tag "Login", class: "btn btn-primary", :tabindex => '4'%>
    <% end %>
    <div class="grid-unit-footer">
      <p class="register"><%= link_to 'Click here to register as a Teacher', register_path, :tabindex => '5' %></p>
    </div>
  </div>
</div>
