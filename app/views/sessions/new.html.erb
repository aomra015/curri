<h1>Login</h1>

<%= form_tag login_path , class: 'form-horizontal' do %>
  <%= f.error_messages %>
  <h3>
    <%= label_tag :email %>
  </h3>
  <span>
    <%= email_field_tag :email, nil, placeholder: 'Please enter email address', class: "form-input" %>
  </span>
  <h3>
    <%= label_tag :password %>
  </h3>
  <span>
    <%= password_field_tag :password, nil, class: "form-input" %>
  </span>

  <span>
    <%= link_to "Forgot password?", new_password_reset_path, id: 'password-reset' %>
  </span>

  <div class="login">
    <%= submit_tag "Login", class: "login-button btn"%>
  </div>
<% end %>
