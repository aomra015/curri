<li class="logo">
  <%= link_to root_path, class: "nav-links", title: 'Home' do %>
    <span class="nav-icon nav-logo"></span>
    <span class="nav-wordmark"></span>
  <% end %>
</li>
<li>
  <%= link_to_selected classrooms_path, class: "nav-links" do %>
    <span class="nav-icon nav-classrooms"></span>
    <span class="nav-label">Classrooms</span>
  <% end %>
</li>

<% if @classroom.try(:id) %>
  <li id="track_link" data-classroomid="<%= @classroom.id %>" >
    <%= link_to_selected classroom_tracks_path(@classroom), class: "nav-links" do %>
      <span class="nav-icon nav-tracks"></span>
      <span class="nav-label">Tracks</span>
    <% end %>
  </li>

  <% if current_user.teacher? %>
    <%= render 'shared/teacher_nav' %>
  <% end %>
<% end %>

<div class="bottom-nav">
  <li>
    <%= link_to_selected '', class: 'nav-links subnav-toggle' do %>
      <span class="nav-icon nav-account" style="background: url('<%= current_user.gravatar%>?s=30&d=<%= image_url('curri-icons.png')%>');"></span>
      <span class="nav-label subnav-slide">Account</span>
    <% end %>
  </li>
  </li>
  <li class="expand-collapse show-desktop">
    <a href='' class="nav-links collapse-toggle" title="Toggle Menu Size">
      <span class="nav-icon nav-size"></span>
      <span class="nav-label nav-label-hide">Collapse</span>
    </a>
  </li>
</div>