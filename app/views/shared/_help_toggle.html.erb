<%= subscribe_to "/classrooms/#{@classroom.id}/requesters" %>
<% if current_user.teacher? %>
  <%= link_to classroom_requesters_path(@classroom), id: "requesters_link", class: 'help-toggle', title: 'Students Needing Help' do %>
    <% if @classroom.requesters.size > 0 %>
      <span class="nav-icon nav-help active"></span>
      <div class="req-num"><%= "#{@classroom.requesters.size}" %></div>
    <% elsif @classroom.requsters.size > 30 %>
      <span class="nav-icon nav-help active"></span>
      <div class="req-num">30+</div>
    <% else %>
      <span class="nav-icon nav-help"></span>
    <% end %>
  <% end %>
<% else %>
  <% if current_user.needs_help?(@classroom) %>
    <%= link_to "I need help!", classroom_reset_status_path(@classroom), method: :patch , id: "help_link#{current_user.get_invitation(@classroom).id}"%>
  <% else %>
    <%= link_to "I'm OK", classroom_reset_status_path(@classroom), method: :patch %>
  <% end %>
<% end %>
