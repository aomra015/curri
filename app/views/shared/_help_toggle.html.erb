<% if current_user.teacher? %>
  <%= link_to classroom_requesters_path(@classroom), id: "requesters_link", class: 'help-toggle', title: 'Students Needing Help' do %>
    <% requests = @classroom.requesters.size %>
    <% if requests > 0 %>
      <span class="nav-icon nav-help active"></span>
      <div class="req-num"><%= "#{requests}" %></div>
    <% elsif requests > 30 %>
      <span class="nav-icon nav-help active"></span>
      <div class="req-num">30+</div>
    <% else %>
      <span class="nav-icon nav-help"></span>
    <% end %>
  <% end %>
<% else %>
  <% requester = current_user.classrole.invitations.find_by(classroom_id: @classroom.id) %>
  <div id="help-toggle">
    <% if current_user.needs_help?(@classroom) %>
      <%= link_to "In queue", classroom_requester_path(classroom_id: @classroom.id, id: requester.id), method: :patch %>
    <% else %>
      <%= link_to "Not in queue", classroom_requester_path(classroom_id: @classroom.id, id: requester.id), method: :patch %>
    <% end %>
  </div>
<% end %>
